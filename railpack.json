{
    "$schema": "https://schema.railpack.com",
    "steps": {
        "build": {
            "commands": [
                {
                    "cmd": "env GOOS=linux GOARCH=amd64 go build -ldflags='-s' -o=./bin/linux_amd64/api ./cmd/api",
                    "customName": "Build an executable and store it bin folder."
                }
            ]
        }
    },
    "deploy": {
        "startCommand": "./bin/linux_amd64/api"
    }
}